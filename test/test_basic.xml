        text="CLIPPINGTESTCLIPPINGTESTCLIPPINGTESTCLIPPINGTEST"
        OnLoad="x:30;y:240;w:200;h:100" />
  
  <text path="test/artistfnt.dxa" align="left"
        text="ABCD" OnLoad="x:300;y:100;w:120;h:100" />
  <text path="test/artistfnt.dxa" align="center"
        text="ABCD" OnLoad="x:300;y:120;w:120;h:100" />
  <text path="test/artistfnt.dxa" align="right"
        text="ABCD" OnLoad="x:300;y:140;w:120;h:100" />
  
  <text path="test/artistfnt.dxa" align="left"
        text="DEFG" OnLoad="x:600;y:100;w:0;h:100" />
  <text path="test/artistfnt.dxa" align="center"
        text="DEFG" OnLoad="x:600;y:120;w:0;h:100" />
  <text path="test/artistfnt.dxa" align="right"
        text="DEFG" OnLoad="x:600;y:140;w:0;h:100" />
  <text path="test/artistfnt.dxa" align="right" autosize="true"
        text="DEFG" OnLoad="x:600;y:160" />
  
  <text path="test/artistfnt.dxa" fit="max"
        text="ABCD" OnLoad="x:300;y:200;w:120;h:100" />
  <text path="test/artistfnt.dxa" fit="max"
        text="ABCDABCDABCDABCDABCD" OnLoad="x:300;y:220;w:120;h:100" />
  <text path="test/artistfnt.dxa" fit="stretch"
        text="ABCD" OnLoad="x:300;y:240;w:120;h:20" />
  <!-- image -->
  <image path="test/test.png"
         OnLoad="acc:2;x:0;y:0;w:100;h:100;time:1500;x:100;y:100;w:150;h:150;rotate:30;loop:1000" />
  <image path="test/test2.png"
         OnLoad="x:200;y:350;w:120;h:120" />
